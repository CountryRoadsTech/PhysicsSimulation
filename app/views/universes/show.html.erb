<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <%= render @universe %>

    <%= link_to 'Edit this universe', edit_universe_path(@universe), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this universe', universe_path(@universe), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Back to universes', universes_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
